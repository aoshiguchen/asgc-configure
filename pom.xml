	   <developer>
	     <name>aoshiguchen</name>
	     <email>1052045476@qq.com</email>
	     <organization>asgc-configure</organization>
	     <organizationUrl>https://github.com/aoshiguchen/asgc-configure</organizationUrl>
	   </developer>
	 </developers>
